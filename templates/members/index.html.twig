{% extends 'base.html.twig' %}

{% block title %}Hello MembersController!
{% endblock %}

{% block body %}
	{% include 'navbar.html.twig' %}
	<div class="container">
		<h1>Nombre de membres inscrits :
			{{ members | length }}
			✅</h1>


		<table class="table table-hover table-dark">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Enregistré le</th>
					<th scope="col">Modifié le</th>
					<th scope="col">Dernière conexion</th>
					<th>Status</th>
				</tr>
			</thead>
			<tbody>
				{% for member in members %}
					<tr>
						<th scope="row">{{ member.id }}</th>
						<td>{{ member.createdAt | date("d/m/Y") }}</td>
						<td>{{ member.updatedAt | date("d/m/Y") }}</td>
						<td>
							{{ member.lastPageLoadDate | date("d/m/Y") }}</td>
						<td>{{ member.status }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
